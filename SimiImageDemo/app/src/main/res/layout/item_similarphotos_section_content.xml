<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/bg_select"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/md_black_70_alpha"
        android:visibility="gone" />

    <View
        android:id="@+id/bg_unselect"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_image_item"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/ic_check_grey" />

    <ImageView
        android:id="@+id/iv_best_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:src="@drawable/ic_corner_marker" />

</FrameLayout>